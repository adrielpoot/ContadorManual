            <StackLayout Orientation="Horizontal" Margin="16" HorizontalOptions="Center">
                <Label FontSize="Large" Margin="8" Text="Conteo:"></Label>
                <Label Margin="16" FontSize="42" HorizontalOptions="Center" Text="0"></Label>
